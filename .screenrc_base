# UTF-8 everywhere
defutf8 on

# skip intro
startup_message off

# disable Ctrl-S/Ctrl-Q "flow control"
defflow off

# default lines is 100, let's do something huge.com
defscrollback 10000

# detach on disconnect
autodetach on

# use regular audible bell
vbell off

# use backtick for prefix key instead of Ctrl-A
escape ``

# make the shell in every window a login shell
shell -$SHELL

# connect windows to the display so programs like mplayer can find it when
# we're inside a screen in a terminal application in a graphical environment
setenv DISPLAY ':0'

# print wackier status messages
nethack on

# restore window contents after using (e.g.) vi
altscreen on

# show MPD info in status bar
backtick 1 5 5 $HOME/.screen_files/get_load
backtick 2 60 60 $HOME/.screen_files/get_gmail

# Set the caption on the bottom line:
hardstatus alwayslastline "%{= kw}%-w%{= gW}%n %t%{-}%+w %-= %{=b kw}[ %{-b .r}%H%{-} %{+b}|%{-} Load: %{-b}%l %{+b}| Gmail: %{-b}%2` %{+b}| %{-b}%m/%d/%y %C:%s%a %{+b}]"
